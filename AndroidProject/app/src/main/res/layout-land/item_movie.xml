<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewColumn1"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_movie_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageViewColumn2"
        />

    <ImageView
        android:id="@+id/imageViewFavourite1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@id/imageViewColumn1"
        app:layout_constraintTop_toTopOf="@id/imageViewColumn1"
        />

    <ImageView
        android:id="@+id/imageViewColumn2"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:src="@drawable/ic_movie_placeholder"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toEndOf="@id/imageViewColumn1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageViewColumn3"

        />

    <ImageView
        android:id="@+id/imageViewFavourite2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@id/imageViewColumn2"
        app:layout_constraintTop_toTopOf="@id/imageViewColumn2"
        />

    <ImageView
        android:id="@+id/imageViewColumn3"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_movie_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageViewColumn4"
        app:layout_constraintStart_toEndOf="@id/imageViewColumn2"

        />

    <ImageView
        android:id="@+id/imageViewFavourite3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@id/imageViewColumn3"
        app:layout_constraintTop_toTopOf="@id/imageViewColumn3"
        />

    <ImageView
        android:id="@+id/imageViewColumn4"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:src="@drawable/ic_movie_placeholder"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewColumn3"

        />

    <ImageView
        android:id="@+id/imageViewFavourite4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="@id/imageViewColumn4"
        app:layout_constraintTop_toTopOf="@id/imageViewColumn4"
        />

</androidx.constraintlayout.widget.ConstraintLayout>